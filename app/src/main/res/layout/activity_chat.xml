<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_background"
    tools:context=".views.activity.ChatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_black"
        app:titleTextColor="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.cardview.widget.CardView
            android:id="@+id/user_dp_in_chat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/sent_message_bg"
            app:cardCornerRadius="@dimen/_20sdp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_20sdp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:text="Hello Ji"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/lato"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/chatting_with_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Offline"
                android:textColor="@color/white"
                android:textSize="@dimen/_7sdp"
                android:fontFamily="@font/lato"
                android:textStyle="italic"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_custom_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_toolbar" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:isScrollContainer="false"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:weightSum="100">

            <EditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="85"
                android:background="@drawable/message_bg"
                android:hint="Message..."
                android:inputType="textCapSentences"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/my_grey" />

            <ImageView
                android:id="@+id/img_send_message"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="15"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_baseline_send_24" />

        </LinearLayout>

    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>