<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_40sdp">

    <TextView
        android:id="@+id/day_of_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="Day NA"
        android:textColor="@color/my_grey"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@+id/tv_received_message"
        app:layout_constraintTop_toTopOf="@+id/tv_received_message"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/time_of_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:text="Time NA"
        android:textColor="@color/my_grey"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@+id/tv_received_message"
        app:layout_constraintTop_toBottomOf="@+id/day_of_received_message"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/tv_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/received_message_bg"
        android:fontFamily="@font/lato"
        android:maxWidth="@dimen/_180sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:textColor="@color/my_black"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Received message" />

</androidx.constraintlayout.widget.ConstraintLayout>